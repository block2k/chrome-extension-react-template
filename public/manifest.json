{
  "manifest_version": 3,
  "name": "Shopify LCP Buff Chrome Extension",
  "version": "1.0.0",
  "description": "Buff LCP for your Shopify app",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}